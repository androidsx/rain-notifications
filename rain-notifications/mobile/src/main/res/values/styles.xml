<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

    <style name="WelcomeScreen" >
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WelcomeScreen.Top" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">24dp</item>
        <item name="android:paddingTop">32dp</item>
    </style>

    <style name="WelcomeScreen.Center" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WelcomeScreen.Line" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">32dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">@color/welcome_bottom_line</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WelcomeScreen.Button" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/welcome_button_background</item>
        <item name="android:textColor">@color/welcome_button_foreground</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>
