    <color name="today_collapsed_background">@color/white</color>
    <color name="today_collapsed_primary_color">@color/gold</color>
    <color name="today_collapsed_secondary_color">@color/grey_dark</color>
    <color name="today_expanded_background">@color/gold</color>
    <color name="today_expanded_primary_color">@color/white</color>
    <color name="today_expanded_secondary_color">@color/white</color>

    <!-- Summary Forecast -->
    <color name="summary_background">@color/white</color>

    <!-- Week Forecast -->
    <color name="week_background">@color/grey_blue</color>
    <color name="week_light">@color/cream_light</color>
    <color name="week_dark">@color/grey_cream</color>
    <color name="week_icon">@color/grey</color>
    <color name="week_dividers">@color/cream_dark</color>
    <color name="week_selector">@color/transparent</color>

    <!-- Status Frames -->
    <color name="status_frames_text_color">@color/grey_blue</color>
    <color name="status_frames_button_text_color">@color/white</color>
