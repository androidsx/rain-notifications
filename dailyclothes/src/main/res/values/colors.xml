<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base colors -->
    <color name="white">#ffffff</color>
    <color name="black">#000000</color>
    <color name="transparent">#00000000</color>
    <color name="grey">#ffbebebe</color>
    <color name="grey_dark">#ff848484</color>
    <color name="grey_blue">#ff3a5665</color>
    <color name="grey_blue_light">#ff658c9b</color>
    <color name="grey_cream">#ffb4b098</color>
    <color name="gold">#ff807335</color>
    <color name="gold_light">#ffaea13e</color>
    <color name="cream_light">#fffef8d5</color>
    <color name="cream_dark">#ffbda68c</color>

    <!-- Window colors -->
    <color name="window_background">@color/white</color>

    <!-- Primary colors See https://developer.android.com/training/material/theme.html#ColorPalette-->
    <color name="primary_color">@color/gold</color>
    <color name="primary_color_dark">@color/gold</color>
    <color name="accent_color">@color/grey_blue</color>

    <!-- ScrollBar -->
    <color name="scrollbar_dark">@color/gold</color>
    <color name="scrollbar_light">@color/white</color>

    <!-- Sliding Panel -->
    <color name="sliding_fade_color">@color/transparent</color>

