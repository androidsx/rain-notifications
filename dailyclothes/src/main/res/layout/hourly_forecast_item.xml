<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/forecast_hourly_item_padding_left_right"
    android:paddingRight="@dimen/forecast_hourly_item_padding_left_right"
    android:id="@+id/forecast">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/forecast_icon"
            android:layout_width="@dimen/forecast_hourly_item_icon_width_height"
            android:layout_height="@dimen/forecast_hourly_item_icon_width_height"
            android:scaleType="fitXY"
            android:tint="@color/forecast_icon"
            android:src="@drawable/ic_clear" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="34"
        android:gravity="center_horizontal">

        <com.androidsx.rainnotifications.dailyclothes.widget.CustomFontTextView
            android:id="@+id/forecast_temp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="63ยบ"
            android:textSize="@dimen/forecast_hourly_item_temp_size"
            android:textColor="@color/forecast_text"
            customAttrs:customFont="roboto_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33"
        android:gravity="center_horizontal">

        <com.androidsx.rainnotifications.dailyclothes.widget.CustomFontTextView
            android:id="@+id/forecast_hour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="10am"
            android:textSize="@dimen/forecast_hourly_item_hour_size"
            android:textColor="@color/forecast_text"
            customAttrs:customFont="roboto_light"/>
    </LinearLayout>
</LinearLayout>