<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/card_image_margin_top_bottom"
        android:layout_marginBottom="@dimen/card_image_margin_top_bottom"
        android:layout_marginLeft="@dimen/card_image_margin_left_right"
        android:layout_marginRight="@dimen/card_image_margin_left_right"
        android:padding="@dimen/card_image_padding"
        android:background="@drawable/bg_parent_rounded_corner">

        <com.androidsx.rainnotifications.dailyclothes.widget.RoundedImageView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ann_taylor_1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            customAttrs:customRadius="@integer/custom_image_radius"/>
    </RelativeLayout>
</RelativeLayout>