<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layout_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee">

        <RelativeLayout
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <com.androidsx.rainnotifications.dailyclothes.widget.CustomFontTextView
                android:id="@+id/now_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="56ยบ"
                android:textSize="70sp"
                android:textColor="#8e7f3a"
                customAttrs:customFont="roboto_thin"/>

            <com.androidsx.rainnotifications.dailyclothes.widget.CustomFontTextView
                android:id="@+id/now_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/now_temp"
                android:layout_marginTop="-35dp"
                android:layout_marginLeft="5dp"
                android:text="now"
                android:textSize="40sp"
                android:textColor="#8e7f3a"
                customAttrs:customFont="roboto_thin"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/hourly_forecast"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@+id/layout_weather"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/close_forecast_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/btn_dialog"
                android:visibility="gone"/>

            <com.androidsx.rainnotifications.dailyclothes.widget.CustomFontTextView
                android:id="@+id/forecast_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/close_forecast_icon"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="#3c5f6e"
                customAttrs:customFont="roboto_light"/>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/clothes_list_view"
        android:layout_below="@+id/layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f5b98d"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp"
            android:background="#ffffff">

            <com.androidsx.rainnotifications.dailyclothes.widget.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#8e7f3a"
                customAttrs:customFont="roboto_light"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/btn_dialog"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                android:gravity="center">

                <com.androidsx.rainnotifications.dailyclothes.widget.CustomFontTextView
                    android:id="@+id/alert_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#8e7f3a"
                    customAttrs:customFont="roboto_light"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
