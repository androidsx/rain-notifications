<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.androidsx.rainnotifications.dailyclothes.quickreturn.QuickReturnListView
        android:id="@+id/clothes_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_weather"
        android:scrollbarThumbVertical="@drawable/scrollbar"
        android:divider="@null"/>

    <com.androidsx.rainnotifications.dailyclothes.widget.CustomFontTextView
        android:id="@+id/forecast_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_weather"
        android:background="@color/forecast_message_background"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:layout_marginRight="5dp"
        android:textSize="16sp"
        android:textColor="@color/forecast_message"
        customAttrs:customFont="roboto_light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/today_background"
        android:id="@+id/layout_weather">

        <RelativeLayout
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:onClick="showNotification">

            <com.androidsx.rainnotifications.dailyclothes.widget.CustomFontTextView
                android:id="@+id/now_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="56ยบ"
                android:textSize="70sp"
                android:textColor="@color/today_text"
                customAttrs:customFont="roboto_thin"/>

            <com.androidsx.rainnotifications.dailyclothes.widget.CustomFontTextView
                android:id="@+id/now_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/now_temp"
                android:layout_marginTop="-35dp"
                android:layout_marginLeft="5dp"
                android:text="now"
                android:textSize="40sp"
                android:textColor="@color/today_text"
                customAttrs:customFont="roboto_thin"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbarThumbHorizontal="@drawable/scrollbar">

                <LinearLayout
                    android:id="@+id/hourly_forecast"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
