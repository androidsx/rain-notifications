<com.sothree.slidinguppanel.SlidingUpPanelLayout
    android:id="@+id/sliding_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:customFont="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:fadeColor="@android:color/transparent"
    sothree:overlay="true"
    sothree:panelHeight="@dimen/sliding_panel_height"
    sothree:shadowHeight="0dp"
    tools:context="com.androidsx.rainnotifications.dailyclothes.MainActivityTest">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frame_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>

        </FrameLayout>


        <!-- Dar estilo a estos dos frames-->
        <LinearLayout
            android:id="@+id/frame_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/status_frame_padding"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/forecast_loading"
                android:textColor="@color/grey_blue"
                android:textSize="18dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/status_frame_padding"
            android:visibility="invisible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/forecast_error"
                android:textColor="@color/grey_blue"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/button_error_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="getForecastData"
                android:text="@string/retry"/>
        </LinearLayout>


    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/sliding_panel_height"
            layout="@layout/activity_main_sliding_panel"/>

        <com.androidsx.rainnotifications.dailyclothes.widget.CustomFontTextView
            android:id="@+id/forecast_message"
            android:background="@color/weather_layout_background_start"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="100dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/forecast_message_text_size"
            android:gravity="center"
            customFont:customFont="roboto_thin"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/activity_main_sliding_week_forecast"/>
    </LinearLayout>








</com.sothree.slidinguppanel.SlidingUpPanelLayout>