<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/daily_forecast_icon"
        android:layout_width="@dimen/forecast_hourly_item_icon_width_height"
        android:layout_height="@dimen/forecast_hourly_item_icon_width_height"
        android:scaleType="fitXY"
        android:src="@drawable/ic_rain"
        android:tint="@color/forecast_icon"/>

    <com.androidsx.rainnotifications.dailyclothes.ui.widget.CustomFontTextView
        android:id="@+id/daily_forecast_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:gravity="left"
        android:text="MONDAY"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        customFont:customFont="roboto_light"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.androidsx.rainnotifications.dailyclothes.ui.widget.CustomFontTextView
                android:id="@+id/daily_forecast_min_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:text="52"
                android:textColor="@android:color/white"
                android:textSize="@dimen/today_min_max_temp_text_size"
                customFont:customFont="roboto_thin"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="25dp"
                android:src="@drawable/triangle_down"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <com.androidsx.rainnotifications.dailyclothes.ui.widget.CustomFontTextView
                android:id="@+id/daily_forecast_max_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:text="68"
                android:textColor="@android:color/white"
                android:textSize="@dimen/today_min_max_temp_text_size"
                customFont:customFont="roboto_thin"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="25dp"
                android:src="@drawable/triangle_up"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>